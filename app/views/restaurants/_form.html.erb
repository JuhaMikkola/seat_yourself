<%= form_for @restaurant do |f| %>

  <%= render 'shared/form_errors', :thing => @restaurant %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>

  <div class="field">
  Price Range: <%= f.select :pricerange, [['$$$', '$$$'],['$$','$$'],['$', '$']] %>
  </div>

  <div class="field">
  Category:
  <%= f.label :category %>
  <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id]} %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity, :min => 1, :max => 500 %>
    <%# note: validations should always be in the model. the min/max set here should be changed to use the same values set there %>
  </div>

  <%= f.submit %>

<% end %>